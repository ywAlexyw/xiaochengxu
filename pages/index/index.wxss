.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.navs {
  position: relative;
  width: 100%;
  height: 100rpx;
  /* background-color: red; */
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1rpx solid #ddd;
}

.navs-item {
  position: relative;
  display: inline-block;
  background-color: yellow;
  padding: 0 20rpx;
  width: 60rpx;
  height: 100%;
}

.navs-item-title {
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
}

.Top {
  width: 90%;
}

.VideoCard {
  width: 100%;
}
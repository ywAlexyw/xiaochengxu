/* pages/search/search.wxss */
/* @import '../compments/top/Top.wxss'; */

.searchTag, .history {
  position: relative;
  width: 100%;
  margin-top: 20rpx;
  padding-top: 50rpx;
}

.searchTag {
  border-top: 1rpx solid #ddd;
}

.search_title, .tagUL{
  position: relative;
  padding-left:20rpx;
  font-size:35rpx;
}

.tagUL {
  margin-top:20rpx;
}

ul, li {
  display: block;
}

.tagLI {
  display: inline-block;
  height: 50rpx;
  margin: 0 20rpx;
  margin-top: 40rpx;
  font-size: 25rpx;
  line-height: 50rpx;
  padding: 0 25rpx;
  background-color: #ddd;
  border-radius: 20rpx;
}

.historyLI {
  /* width: 100%; */
  height: 50rpx;
  font-size:30rpx;
  padding:20rpx;
  border-bottom:1rpx solid #ddd;
}

.timeIcon {
  float:left;
  width: 50rpx;
  height: 50rpx;
  margin-right:30rpx;
  background-color:red;
}

.li-ID {
  float:left;
  display: inline-block;
  line-height:50rpx;
}

.delBtn {
  float: right;
  width: 50rpx;
  height: 50rpx;
  background-color: yellow;
}

